{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"allowJs": true,
		"checkJs": true,
		"isolatedModules": true,
		"composite": true,
		"moduleResolution": "Node",
		"paths": {
			"$lib/*": ["lib/*"],
			"$routes/*": ["routes/*"],
			"$runtime/*": ["runtime/*"]
		}
	},
	"include": [
		"routes/**/*.ts",
		"routes/**/*.svelte",
		"lib/**/*.ts",
		"runtime/**/*.ts",
		"vite.config.ts",
		"kit.ts",
		"server.ts",
		"routes/client.ts",
		"vite-env.d.ts",
		"worker.ts",
		"dist/manifest.json"
	]
}
